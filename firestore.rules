rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users doc and subcollections: only the authenticated user may read/write their data
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;

      // games and series subcollections and any other subcollections under users
      match /{subCollection}/{docId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }
  }
}
